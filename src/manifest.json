{
    "name": "Google rank checker",
    "version": "0.3",
    "description": "See your sites rank in a click",
    "permissions": ["tabs","activeTab", "declarativeContent", "storage", "https://www.google.com/"],
    "background": {
        "scripts": ["storage.js", "common.js", "search.js", "background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/pagerank16.png",
            "32": "images/pagerank32.png",
            "48": "images/pagerank48.png",
            "128": "images/pagerank128.png"
          }
    },
    "icons": {
        "16": "images/pagerank16.png",
        "32": "images/pagerank32.png",
        "48": "images/pagerank48.png",
        "128": "images/pagerank128.png"
    },
    "options_page": "sites.html",
    "manifest_version": 2
}